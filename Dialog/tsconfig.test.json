{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "jsx":"preserve",
      "outDir": "lib",    
      "declaration": true,                             
      "declarationMap": true,                          
      "sourceMap": true,            
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "examples"],
  
  }